<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Nombre  %>
        </div>
        
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Ingrese su nombre de usuario", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Email %>
        </div>
        
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Ingrese su email", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Password %>
        </div>
        
        <div class="col-sm-8">
          <%= f.password_field :password, class:"form-control" %>
         
        </div>
        
        <div class="col-sm-offset-2 col-sm-10">
            <br>
          <%= f.submit(@user.new_record? ? "Crear Cuenta" : "Guardar Cambios", class: "btn btn-primary btn-lg") %>
          <%= link_to "Cancelar", articles_path, class: "btn btn-lg btn-default" %>
        </div>
      </div>
      
    <% end %>
        
  </div>
</div>