
<div align="center"> <%= will_paginate @article %> </div>
    <!--< render "articles/article", obj: @article %>-->
    
  <% @article.each do |a| %>  
    <div class="col-6 col-sm-6 col-lg-4">
        <h2 style="text-decoration: underline;"><%= link_to a.title, article_path(a.id)%></h2>
        <em><%= a.created_at%></em>
        <p><%= sanitize a.description[0...150] + "..."%></p>
        <%= link_to "Leer más»", article_path(a.id), class: "btn btn-default" %>
         <% if logged_in? && (current_user == a.user || current_user.admin?) %>
           <%= link_to "Edit", edit_article_path(a.id), class: "btn btn-default" %> |
           <%= link_to "Delete", article_path(a.id), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure"} %>
         <%end%>
    </div>
    <%end%>
<div align="center"> <%= will_paginate @article %> </div>