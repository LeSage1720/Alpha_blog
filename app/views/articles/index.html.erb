<%= link_to "New Article", new_article_path %>
<div class="container">
    <h1>List Of All Articles</h1>
    <ul>
        <% @article.each do |a| %>
            <li>
               
               <h3><%= link_to a.title, article_path(a.id) %></h3>
                Description: <%= a.description[0..100] %><br>
               <%= link_to "Edit", edit_article_path(a.id) %>
               <%= link_to "Show", article_path(a.id) %>
               <%= link_to "Delete", article_path(a.id), method: :delete, data: {confirm: "Are you sure"} %>
               
            </li><br>
        <% end %>
    </ul>
</div>