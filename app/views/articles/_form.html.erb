<%= render "shared/alert", obj: @article %>
<!--Add Bootstrap form Style -->

<div class='row'>
  <div class='col-xs-12'>
    
    <%= form_for(@article, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Título %>
        </div>
        
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Ingrese el título del artículo", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :Descripción %>
        </div>
        
        <div class="col-sm-8">
          <%= f.hidden_field :description, class:"form-control", id: "text_editor", type: "hidden" %>
          <trix-editor style="overflow-y:auto; height: 300px;" input="text_editor" rows="10" class="form-control" placeholder= "Ingrese la descripción del artículo"></trix-editor>
        </div>
        
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      
      <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancelar redacción y volver", articles_path %> ]
      </div>
    
    <% end %>
        
  </div>
</div>